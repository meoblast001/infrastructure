[Unit]
Description=KKSystem Application as Standalone Passenger Server
After=network.target

[Service]
Type=forking
User=deploy
Group=deploy
WorkingDirectory=/var/server/kksystem
PIDFile=/var/run/kksystem/passenger.pid
ExecStart=/var/server/kksystemctl.sh start
ExecStop=/var/server/kksystemctl.sh stop
ExecReload=/var/server/kksystemctl.sh restart
PrivateTmp=yes

[Install]
WantedBy=multi-user.target
